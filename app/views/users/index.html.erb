<div class="max-w-6xl mx-auto px-4">
  <h1 class="text-3xl font-bold text-gray-800 mb-6">Users from API</h1>

  <ul class="space-y-2 mb-8">
    <% @users.each do |user| %>
      <li class="flex justify-between items-center gap-4 p-4 bg-white rounded-lg shadow hover:shadow-md transition-shadow">
        <div>
          <%= link_to user["name"], user_path(user["id"]), class: "text-blue-600 hover:text-blue-800 font-medium" %>: 
          <span class="text-gray-600"><%= user["email"] %></span>
        </div>
        <i class="fa-regular fa-trash-can text-gray-400 hover:text-red-500 cursor-pointer"></i>
      </li>
    <% end %>
  </ul>

  <div class="bg-white p-6 rounded-lg shadow">
    <h2 class="text-2xl font-semibold text-gray-800 mb-4">Add New User</h2>
    <%= render 'form' %>
  </div>

  <% if flash[:notice] %>
    <div class="mt-4 p-3 bg-green-100 text-green-800 rounded"><%= flash[:notice] %></div>
  <% end %>

  <% if flash[:alert] %>
    <div class="mt-4 p-3 bg-red-100 text-red-800 rounded"><%= flash[:alert] %></div>
  <% end %>
</div>