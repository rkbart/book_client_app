<div class="max-w-4xl mx-auto px-4">
  <h1 class="text-2xl font-bold mb-4">Edit User</h1>
  <%= form_with url: user_path(@user["id"]), method: :patch, local: true, class: "space-y-4" do |form| %>
    <div class="space-y-2">
      <%= form.label :name, "Name", class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :name, name: "user[name]", value: @user["name"], required: true, 
            class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div class="space-y-2">
      <%= form.label :email, "Email", class: "block text-sm font-medium text-gray-700" %>
      <%= form.email_field :email, name: "user[email]", value: @user["email"], required: true,
            class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <%= form.submit "Update User", 
          class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 cursor-pointer" %>
  <% end %>
  <%= link_to 'Back', user_path(@user["id"]), class: "inline-block w-full px-4 py-2 bg-gray-100 text-gray-700 rounded hover:bg-gray-200 transition-colors text-center mt-2" %>
</div>