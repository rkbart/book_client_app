<div class="flex flex-col justify-start gap-4 items-center min-h-screen space-y-6 mx-auto">
  <div class="bg-white p-6 rounded-lg shadow max-w-md w-full">
    <div class="flex justify-start items-start gap-2">
      <h2 class="text-2xl font-semibold text-gray-800 mb-2">
        <%= @book["title"] || "Untitled Book" %>
      </h2>
      
      <% if @book["category"].present? && @book["category"]["name"].present? %>
        <span class="inline-block mt-1 px-2 py-1 text-xs font-medium bg-blue-100 text-blue-800 rounded-full">
          <%= @book["category"]["name"] %>
        </span>
      <% end %>
      
      <% if @book["user_id"].present? && @book["id"].present? %>
        <%= link_to edit_user_book_path(@book["user_id"], @book["id"]), class: "text-blue-600 hover:text-blue-800 transition-colors" do %>
          <i class="fa-solid fa-pen-to-square cursor-pointer mt-2" title="Edit Book"></i>
        <% end %>
      <% end %>
    </div>
    
    <p class="text-gray-700 mb-2">by <%= @book["author"] || "Unknown Author" %></p>
    
    <p class="text-gray-700">
      <strong>Owned by:</strong> 
      <%= @user["name"] || "Unknown User" %>
    </p>
  </div>

  <%= link_to 'Back to User', user_path(@book["user_id"] || params[:user_id]), 
        class: "inline-block w-40 px-4 py-2 bg-gray-100 text-gray-700 rounded hover:bg-gray-200 transition-colors text-center" %>
</div>